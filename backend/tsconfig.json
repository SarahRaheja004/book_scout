{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node"],

    "sourceMap": true,
    "declaration": false,

    "strict": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "moduleDetection": "force"
  },
  "include": ["src"]
}
